@model dmp.Common.JsonMessage
@{
    ViewBag.Title = "登录";
    var referrer = ViewBag.Referrer;
}
<div> 
    <div class="middle-box text-center loginscreen  animated fadeInDown">
        @if (Model!=null && (Model.type == -1 || Model.type==0))
        {
            <div class="alert alert-danger">
                <strong>@Model.message!</strong> 
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        <div>
            <div>
                <h1 class="logo-name">DMP</h1>
            </div>
            <h3>欢迎使用 DMP</h3>
            <form class="m-t" role="form" action="/auth/index?referrerurl=@referrer" method="post">
                <div class="form-group">
                    <input name="userName" class="form-control" placeholder="用户名" required="用户名不能为空">
                </div>
                <div class="form-group">
                    <input type="password" name="password" class="form-control" placeholder="密码" required="">
                    <input type="hidden" value="@referrer" name="referrerurl"/>
                </div>
                <div class="form-group div-width">
                    <button type="submit" class="btn btn-primary block full-width  m-b">登 录</button>
                </div>

                <p class="text-muted text-center">11233123
                    <a href="/"><small>忘记密码了？</small></a> | <a href="#">注册一个新账号</a>
                </p>

            </form>
        </div>
    </div>
</div>

